<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_entry_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rmc.thienle.jedi2.EntryManageActivity"
    tools:showIn="@layout/activity_entry_manage">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:padding="3dip"
            android:text="Name  :"
            android:textSize="@dimen/font_size" />

        <EditText
            android:id="@+id/entryManage_entryName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:digits="@string/input_validate"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="@dimen/font_size" />
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="@color/colorAccent" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:padding="3dip"
            android:text="From   :"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/from"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="3dip"
            android:text="00:00"
            android:textSize="@dimen/font_size" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:padding="3dip"
            android:text="To        :"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/to"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="3dip"
            android:text="00:00"
            android:textSize="@dimen/font_size" />
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="@color/colorAccent" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:layout_weight="1"
            android:gravity="start"
            android:padding="3dip"
            android:text="Weekday:"
            android:textSize="@dimen/font_size" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <ToggleButton
            android:id="@+id/mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxLines="1"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/toggle_text_color"
            android:textOff="MON"
            android:textOn="MON" />

        <ToggleButton
            android:id="@+id/tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="TUE"
            android:textOn="TUE" />

        <ToggleButton
            android:id="@+id/wen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="WEN"
            android:textOn="WEN" />

        <ToggleButton
            android:id="@+id/thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="THU"
            android:textOn="THU" />

        <ToggleButton
            android:id="@+id/fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="FRI"
            android:textOn="FRI" />

        <ToggleButton
            android:id="@+id/sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="SAT"
            android:textOn="SAT" />

        <ToggleButton
            android:id="@+id/sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="SUN"
            android:textOn="SUN" />
    </LinearLayout>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:layout_weight="1"
            android:gravity="start"
            android:padding="3dip"
            android:text="Month:"
            android:textSize="@dimen/font_size" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <ToggleButton
            android:id="@+id/jan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="1"
            android:textOn="1" />

        <ToggleButton
            android:id="@+id/feb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="2"
            android:textOn="2" />

        <ToggleButton
            android:id="@+id/mar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="3"
            android:textOn="3" />

        <ToggleButton
            android:id="@+id/apr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="4"
            android:textOn="4" />

        <ToggleButton
            android:id="@+id/may"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="5"
            android:textOn="5" />

        <ToggleButton
            android:id="@+id/jun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="6"
            android:textOn="6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <ToggleButton
            android:id="@+id/jul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="7"
            android:textOn="7" />

        <ToggleButton
            android:id="@+id/aug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="8"
            android:textOn="8" />

        <ToggleButton
            android:id="@+id/sep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="9"
            android:textOn="9" />

        <ToggleButton
            android:id="@+id/oct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="10"
            android:textOn="10" />

        <ToggleButton
            android:id="@+id/nov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="11"
            android:textOn="11" />

        <ToggleButton
            android:id="@+id/dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:checked="true"
            android:padding="0dp"
            android:textColor="@color/colorAccent"
            android:textOff="12"
            android:textOn="12" />

    </LinearLayout>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:layout_weight="1"
            android:gravity="start"
            android:padding="3dip"
            android:text="Everyday :"
            android:textSize="@dimen/font_size" />

        <CheckBox
            android:text="CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:id="@+id/isEveryday" />
    </TableRow>
</TableLayout>
